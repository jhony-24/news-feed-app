<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNeutralScreen"
    tools:context=".ui.profile.ProfileActivity">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0sp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mi perfil"
                android:padding="15sp"
                android:textSize="14sp"
                android:textAlignment="center"/>
            <LinearLayout
                android:background="@drawable/card_rounded_solid"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20sp"
                android:paddingBottom="40sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="40sp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp">
                <ImageView
                    android:layout_width="120sp"
                    android:layout_height="120sp"
                    android:src="@drawable/icon_profile_neutral"
                    android:layout_marginBottom="30sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="User number one"
                    android:paddingStart="50sp"
                    android:paddingEnd="50sp"
                    android:layout_marginBottom="10sp"
                    android:textSize="25sp"
                    android:textColor="@color/colorDark"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="miguelMark3@hotmail.com"
                    android:textSize="15sp"
                    android:paddingStart="20sp"
                    android:paddingEnd="20sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:paddingStart="20sp"
                android:paddingEnd="20sp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="20sp"
                    android:paddingStart="20sp"
                    android:paddingEnd="20sp"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This app is created with android and java language pp is created with javascript php pubsub system"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cornerRadius="30sp"
                    android:text="Follow"
                    android:padding="15sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14sp">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0sp"
            android:padding="5sp"
            android:background="@drawable/card_rounded_solid"
            app:menu="@menu/main_bottom_navigation_menu"/>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>