<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNeutralScreen"
    tools:context=".ui.profile.ProfileActivity">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0sp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:collapseColumns="3"
                android:layout_width="match_parent"
                android:paddingStart="10sp"
                android:paddingEnd="10sp"
                android:layout_height="wrap_content">
                <TableRow>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/ic_baseline_keyboard_backspace_24"
                        android:onClick="onGoBackFromProfile" />
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="Mi perfil"
                        android:textColor="@color/colorDark"
                        android:padding="15sp"
                        android:textSize="16sp"
                        android:textAlignment="center"/>
                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:layout_width="30sp"
                        android:layout_height="30sp"/>
                </TableRow>
            </TableLayout>
            <LinearLayout
                android:background="@drawable/card_rounded_solid"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20sp"
                android:paddingBottom="40sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="40sp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4sp"
                    android:background="@drawable/gradient_primary_rounded_full">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileAvatar"
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    app:civ_border_color="@color/colorLight"
                    app:civ_border_width="4sp"/>
                </FrameLayout>
                <TextView
                    android:id="@+id/profileFullName"
                    android:text="loading..."
                    style="@style/CustomTextViewBigTitle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:id="@+id/profileEmail"
                    android:text=""
                    android:textSize="15sp"
                    android:paddingStart="20sp"
                    android:paddingEnd="20sp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cornerRadius="30sp"
                    android:layout_marginTop="20sp"
                    android:paddingStart="40sp"
                    android:paddingEnd="40sp"
                    android:text="Follow"
                    android:padding="15sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:paddingStart="20sp"
                android:paddingEnd="20sp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/profileDescription"
                    android:layout_marginBottom="20sp"
                    android:paddingStart="20sp"
                    android:paddingEnd="20sp"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This app is created with android and java language pp is created with javascript php pubsub system"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14sp">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0sp"
            android:padding="5sp"
            android:background="@drawable/card_rounded_solid"
            app:menu="@menu/main_bottom_navigation_menu"/>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>